/**app.wxss**/
@import "utils/style/weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page{
  background-color: #EFEEF4 !important;
}

.colorTextPrimary{
  color: #FF6801;
}

.branchesSelected{
  background-color: #FF6801 !important;
  color: white !important;
}

.branchesUnselected{
  background-color: white !important;
}

.font-size-13 {
  font-size: 13px;
}

.product {
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px #d6dadb solid;
  background-color: white;
  border-radius: 5px;
  margin-bottom: 5px;
}

.imageProductCar {
  width: 100px;
  height: 80px;
  padding-left: 6px;
  padding-top: 6px;
  border-radius: 5px;
}

.productInformation {
  display: flex;
  flex-direction: column;
  padding-left: 10px;
}

.displayFlexRow{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.padding-10{
  padding: 10px;
}