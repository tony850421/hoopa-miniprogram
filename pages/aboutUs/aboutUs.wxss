/* pages/aboutUs/aboutUs.wxss */

.projectsGroupAbout {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 10px;
  border: 1px #d6dadb solid;
  width: 93%;
}

.imageService {
  height: 220rpx;
  width: 100%;
}

.aboutus {
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  margin-top: -20px;
  z-index: 5;
  position: absolute;
}

.textWhite {
  color: white;
}

.boxTextBanner {
  position: absolute;
  z-index: 5;
  top: 60rpx;
}

@media (min-width: 320px) {
  .boxTextBanner {
    margin-left: 37%;
  }

  .styleTeam {
    margin-top: 310px;
    padding: 5px;
  }
}

@media (min-width: 360px) {
  .boxTextBanner {
    margin-left: 37%;
  }

  .styleTeam {
    margin-top: 270px;
    padding: 6px;
  }
}

@media (min-width: 375px) {
  .boxTextBanner {
    margin-left: 37%;
  }

  .styleTeam {
    margin-top: 255px;
    padding: 6px;
  }
}

@media (min-width: 414px) {
  .boxTextBanner {
    margin-left: 37%;
  }

  .styleTeam {
    margin-top: 235px;
    padding-left: 6px !important;
    padding-right: 10px !important;
  }
}

@media (min-width: 480px) {
  .boxTextBanner {
    margin-left: 37%;
  }

  .styleTeam {
    margin-top: 220px;
    padding-left: 6px !important;
    padding-right: 14px !important;
  }
}

.imageTeam {
  width: 80px;
  height: 80px;
  margin-left: 10px;
  border-radius: 50px;
}

.servicesText {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60%;
  padding-left: 10px;
  padding-right: 10px;
  margin-left: 10px;
}

.projectsGroup {
  display: flex;
  flex-direction: column;
  border-radius: 5px;
  padding-bottom: 10px;
  width: 100%;
}

.services {
  display: flex;
  flex-direction: row;
  border: 1px #d6dadb solid;
  background-color: white;
  margin-left: 5px;
  margin-right: 5px;
  margin-bottom: 5px;
  padding-top: 10px;
}

.styleTeam {
  position: absolute;
  z-index: 5;
}

.textWhite {
  color: white;
}

.boxTextBanner {
  position: absolute;
  z-index: 5;
  top: 60rpx;
}