/* pages/services/services.wxss */

.groupNumber {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.servicesText {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 70%;
  padding-left: 10px;
  padding-right: 10px;
}

.services {
  display: flex;
  flex-direction: row;
}

.imageNumber {
  width: 40px;
  height: 40px;
}

.lineService {
  width: 3px;
  height: 40px;
  margin-top: 5px;
}

.projectsGroup {
  display: flex;
  flex-direction: column;
  background-color: white;
  border-radius: 5px;
  padding: 10px;
  border: 1px #d6dadb solid;
  width: 100%;
  height: 70px;
}

.imageService {
  height: 220rpx;
  width: 100%;
}

.dots {
  height: 3px;
  width: 75%;
  margin-left: -4px;
}
