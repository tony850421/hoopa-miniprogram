/* pages/offer/offer.wxss */
.offer{
  display: flex;
  flex-direction: column;
  padding: 15px;
  font-size: 12px;
}

.lineV {
  width: 3px;
  height: 20px;
}

.projectTitleGroup {
  display: flex;
  flex-direction: column;
  width: 25%;
  align-items: center;
}

.projectsGroup {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  padding: 10px;
  margin-top: 5px;
}

.projectTextGroup {
  width: 75%;
  margin-left: 10px;
  display: flex;
}

.projectsLabel {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: transparent;
  padding: 10px;
  margin-top: 5px;
}

.textAreaOffer{
  width: 100%;
  display: flex;
  flex-direction: 100%;
  padding: 15px;
}

.buttonSave{  
  color: white;
  border-radius: 5px;
  width: 70px !important;
}

.buttonCancel{  
  color: black;
  border-radius: 5px;
  width: 70px !important;
  border: 1px #D6DADB solid;
}

.saveBox{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20px;
}