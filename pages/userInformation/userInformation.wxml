<!--pages/userInformation/userInformation.wxml-->
<view>
  <view class="userinfo BackgorundProfile">
    <block>
      <view class='dataUserInfoCover'>
        <view class='imageContainer'>
          <image bindtap="goToUserInformation" class="userinfo-avatar" src="{{user.avatarUrl}}" background-size="cover"></image>
        </view>
        <text bindtap="goToUserInformation" class="userinfo-nickname font-size-13">{{user.fullName}}</text>
        <view class='locationUser'>
          <image class='imageLocationUser' src='../../images/userLocation.png'></image>
          <text bindtap="goToUserInformation" class="userinfo-nickname font-size-13">{{user.city}}, {{user.province}}</text>
        </view>
      </view>
    </block>
  </view>
  <view class='projectsGroup'>
    <view class='projectTitleGroup'>
      <text class='font-size-13'>名字</text>
    </view>
    <image class='lineV' src='../../images/lineV.jpg'></image>
    <view class='projectTextGroup'>
      <input placeholder='名字' value='{{user.fullName}}'></input>
    </view>
  </view>

  <view class='projectsGroup'>
    <view class='projectTitleGroup'>
      <text class='font-size-13'>电话</text>
    </view>
    <image class='lineV' src='../../images/lineV.jpg'></image>
    <view class='projectTextGroup'>
      <input placeholder='电话' value='{{user.mobilePhoneNumber}}'></input>
    </view>
  </view>

  <view class='projectsGroup'>
    <view class='projectTitleGroup'>
      <text class='font-size-13'>识别</text>
    </view>
    <image class='lineV' src='../../images/lineV.jpg'></image>
    <view class='projectTextGroup'>
      <input placeholder='识别' value='{{user.ci}}'></input>
    </view>
  </view>

  <view class='projectsGroup'>
    <view class='projectTitleGroup'>
      <text class='font-size-13'>公司</text>
    </view>
    <image class='lineV' src='../../images/lineV.jpg'></image>
    <view class='projectTextGroup'>
      <input placeholder='公司' value='{{user.company}}'></input>
    </view>
  </view>

  <view class='saveBox'>
    <button size='mini' class='buttonSave'>救</button>
  </view>
</view>