}

.mapProject {
  width: 100%;
  height: 120px;
}

.margin-bottom-0 {
  margin-bottom: 0px !important;
}

.lineV {
  width: 3px;
  height: 20px;
}

.projectTitleGroup {
  display: flex;
  flex-direction: column;
  width: 25%;
  align-items: center;
}

.projectsGroup {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  padding: 10px;
  margin-top: 5px;
}

.projectsLabel {
  display: flex;
  flex-direction: row;
