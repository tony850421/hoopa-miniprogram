.generalData {
  display: flex;
  flex-direction: column;
  padding-left: 15px;
  padding-right: 15px;
  padding-top: 15px;
}

.margin-bottom-5 {
  margin-bottom: 5px;
}

.mainInformation {
  margin-bottom: 10px;
  border-bottom: 1px #c4c4c4 solid;
  padding-bottom: 5px;
}

.imageLocation {
  width: 17px;
  height: 20px;
}

.imageCall{
  width: 20px;
  height: 20px;
}

.FlexDirectionRow {
  display: flex;
  flex-direction: row;
}

.data {
  display: flex;
  flex-direction: row;
  border-bottom: 1px #c4c4c4 solid;
}

.buttonsBar {
  border-top: 1px #bbb solid;
  display: flex;
  flex-direction: row;
}

.buttonLeft {
  background-color: white;
  width: 16%;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.buttonCar {
  background-color: #ff6801;
  width: 42%;
