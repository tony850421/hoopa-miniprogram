<!--pages/project/project.wxml-->
<view>
  <scroll-view scroll-y="true" style="height: {{height-44}}px" scroll-top="100">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imageList}}" wx:for-item="image">
        <swiper-item>
          <image mode='aspectFill' src="{{image.imageUrl}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
    <view class='section'>
      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>资产名称</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>{{product.title}}</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>债权本金</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5 colorTextPrimary'>¥{{product.debitAmount}}万</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>债权本息</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5 colorTextPrimary'>¥{{product.debitPricipalInterest}}万</text>
        </view>
      </view>


      <!-- description  -->
      <view class='projectsLabel font-size-13' wx:if="{{product.description != ''}}">
        <view class='projectTitleGroupLabel'>
          <text>资产亮点</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13' wx:if="{{product.description != ''}}">
        <view class='desciptionGroup'>
          <text class='margin-left-5'>{{product.description}}</text>
        </view>
      </view>

      <!-- credits highlights  -->
       <view class='projectsLabel font-size-13' wx:if="{{product.description != ''}}">
        <view class='projectTitleGroupLabel'>
          <text>学分亮点</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13' wx:if="{{product.description != ''}}">
        <view class='desciptionGroup'>
          <text class='margin-left-5'>{{product.creditHighlights}}</text>
        </view>
      </view> 


      <!-- hay que cambiar esto pot un text area-->
      <!-- <view class='projectsLabel font-size-13'>
        <view class='projectTitleGroupLabel'>
          <text>法律进度</text>
        </view>
      </view> -->


      <view class='projectsLabel font-size-13' wx:if="{{product.legalState.length > 0}}">
        <view class='projectTitleGroupLabel'>
          <text>法律进度</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13' wx:if="{{product.legalState.length > 0}}">
        <view class='desciptionGroup'>
          <text class='margin-left-5'>{{product.legalState}}</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13' wx:if="{{product.court != ''}}">
        <view class='projectTitleGroup'>
          <text>受理法院</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>{{product.court}}</text>
        </view>
      </view>

      <!--numero de ofertas  -->
      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>已报价次数</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>{{offersCount}}</text>
        </view>
      </view>
      <!--numero de visitas  -->
      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>访问次数</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>{{visitCount}}</text>
        </view>
      </view>

      <!--project manager  -->
      <view wx:if="{{projectManager.name != '' }}" class='projectsLabel font-size-13'>
        <view class='projectTitleGroupLabel'>
          <text>项目经理</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13' wx:if="{{projectManager.name != '' }}">
        <view class='projectTitleGroup'>
          <text>名字</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>{{projectManager.name}}</text>
        </view>
      </view>

      <view wx:if="{{projectManager.name != '' }}" class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>电话</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <view class='phoneNumber'>
            <text bindtap='callPhoneNumber' data-phone="{{projectManager.phone}} " class='margin-left-5'>{{projectManager.phone}}</text>
          </view>
          <view class='callPhoneNumber'>
            <image bindtap='callPhoneNumber' data-phone="{{projectManager.phone}} " class='imageCall margin-left-5' src='../../images/call.png'></image>
          </view>
        </view>
      </view>

      <!--prestamistas  -->
      <view class='projectsLabel font-size-13' wx:if="{{borrowerList.length > 0}}">
        <view class='projectTitleGroupLabel'>
          <text>借款人信息({{borrowerList.length}}条)</text>
        </view>
      </view>

      <view wx:for="{{borrowerList}}" wx:for-item="borrower">

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroupLabel'>
            <text>{{index+1}}.{{borrower.name}}</text>
          </view>
        </view>

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>债权本金</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5 colorTextPrimary'>¥{{borrower.principalDebit}}万</text>
          </view>
        </view>

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>债权利息</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5 colorTextPrimary'>¥{{borrower.interestCreditor}}万</text>
          </view>
        </view>

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>本息合计</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5 colorTextPrimary'>¥{{borrower.totalInterest}}万</text>
          </view>
        </view>
      </view>

      <!-- assets information  -->
      <view class='projectsLabel font-size-13' wx:if="{{assetsList.length> 0}}">
        <view class='projectTitleGroupLabel'>
          <text>抵押物详情 ({{assetsList.length}}条)</text>
        </view>
      </view>

      <view wx:for="{{assetsList}}" wx:for-item="asset">
        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroupLabel'>
            <text>{{index+1}}.{{asset.title}}</text>
          </view>
        </view>
        <!--maps  -->
        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>详细地址</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <view class='phoneNumber'>
              <text bindtap='goToAsset' class='margin-left-5'>{{asset.plainAddress}}</text>
            </view>
            <view class='userLocationGroup' data-latitude="{{asset.location.latitude}}" data-longitude="{{asset.location.longitude}}" bindtap='goToAsset'>
              <image class='imageLocation' src='../../images/userLocation.png'></image>
            </view>
          </view>
        </view>

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>抵押物类型</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5'>{{asset.typeArrival}}</text>
          </view>
        </view>

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>建筑面积</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5'>{{asset.constructionArea}}m²</text>
          </view>
        </view>

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>土地面积</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5'>{{asset.landArea}}m²</text>
          </view>
        </view>
      </view>

      <!-- sponsors  -->
      <view wx:if="{{sponsorsList.length > 0}}" class='projectsLabel font-size-13'>
        <view class='projectTitleGroupLabel'>
          <text>保证人 ({{sponsorsList.length}}条)</text>
        </view>
      </view>

      <view wx:for="{{sponsorsList}}" wx:for-item="sponsor">
        <!--list of sponsors  -->
        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroupLabel'>
            <text>{{index+1}}.{{sponsor.name}}</text>
          </view>
        </view>

        <!-- <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>保证人</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5'>{{sponsor.name}}</text>
          </view>
        </view> -->

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>类型</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5'>{{sponsor.type}}</text>
          </view>
        </view>

        <view class='projectsGroup font-size-13'>
          <view class='projectTitleGroup'>
            <text>担保金额</text>
          </view>
          <image class='lineV' src='../../images/lineV.jpg'></image>
          <view class='projectTextGroup'>
            <text class='margin-left-5'>¥{{sponsor.amount}}万</text>
          </view>
        </view>
      </view>

      <!-- nearby  -->
      <view class='projectsLabel font-size-13'>
        <view class='projectTitleGroupLabel'>
          <text style='height: 20px'></text>
        </view>
      </view>
      <view class='projectsGroup font-size-13' bindtap='goToNearby'>
        <view class='nearbyProjects'>
          <text class='margin-left-5'>周围的其它资产</text>
        </view>
        <view class='userLocationGroup'>
          <image class='imageLocation' src='../../images/userLocation.png'></image>
        </view>
      </view>

      <!-- recommended  -->
      <view class='projectsGroup font-size-13' bindtap='goToRecommended'>
        <view class='nearbyProjects'>
          <text class='margin-left-5'>推荐</text>
        </view>
        <view class='userLocationGroup'>
          <image class='imageRecomended' src='../../images/recommended.png'></image>
        </view>
      </view>

    </view>
  </scroll-view>
  <view class='buttonsBar'>
    <view class='buttonLeft' bindtap='goToCar'>
      <image class='imageButtonOffers' src='../../images/car.png'></image>
      <text class='font-size-11'>我的报价</text>
    </view>
    <view class='buttonCar' bindtap='sendToShopCar'>
      <text class='font-size-11 '>添加到我的收藏</text>
    </view>
    <view class='buttonRight' bindtap='goToOffer'>
      <text class='font-size-11'>立即报价</text>
    </view>
  </view>
</view>