<!--pages/project/project.wxml-->
<view>
  <scroll-view scroll-y="true" style="height: {{height-45}}px" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="red" scroll-top="100">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150" />
        </swiper-item>
      </block>
    </swiper>
    <view class='section'>
      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>项目名称</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>{{product.title}}</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>债权本金</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5 colorTextPrimary'>7845232.00</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>债权本息</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>1845232.00</text>
        </view>
      </view>

      <!--project manager  -->
      <view class='projectsLabel font-size-13'>
        <view class='projectTitleGroup'>
          <text>项目经理</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>名字</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>王额</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>电话</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <view class='phoneNumber'>
            <text bindtap='callPhoneNumber' class='margin-left-5'>15423668954</text>
          </view>
          <view class='callPhoneNumber'>
            <image bindtap='callPhoneNumber' class='imageCall margin-left-5' src='../../images/call.png'></image>
          </view>
        </view>
      </view>

      <!--legal progress  -->
      <view class='projectsLabel font-size-13'>
        <view class='projectTitleGroup'>
          <text>法律进度</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>是否有报价</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>是</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>关注数</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>7 人</text>
        </view>
      </view>

      <!-- borrower information  -->
      <view class='projectsLabel font-size-13'>
        <view class='projectTitleGroup'>
          <text>借款人信息</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>债权本金</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>234</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>债权利息</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>465</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>本息合计</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>1398</text>
        </view>
      </view>

      <!--maps  -->
      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>方向</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>广州市天河区金穗路3号汇美大厦1201A</text>
        </view>
      </view>

      <map class='mapProject margin-bottom-5' id="mapDirection" longitude="126.605935" latitude="45.759068" scale="16"></map>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>质</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>非常好</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>建筑面积</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>123m</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>土地面积</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>231m</text>
        </view>
      </view>

      <!-- sponsors  -->
      <view class='projectsLabel font-size-13'>
        <view class='projectTitleGroup'>
          <text>赞助商</text>
        </view>
      </view>

      <!--list of sponsors  -->
      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>保证人</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>李王</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>类型</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>个人</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='projectTitleGroup'>
          <text>担保金额</text>
        </view>
        <image class='lineV' src='../../images/lineV.jpg'></image>
        <view class='projectTextGroup'>
          <text class='margin-left-5'>12312</text>
        </view>
      </view>


      <!-- borrower progress  -->
      <view class='projectsLabel font-size-13'>
        <view class='projectTitleGroup'>
          <text>描述</text>
        </view>
      </view>

      <view class='projectsGroup font-size-13'>
        <view class='desciptionGroup'>
          <text class='margin-left-5'>胡巴资产专业提供不良资产收购、处置、资金配套服务；核心管理团队有10年不良资产行业管理经验；所管理处置的不良债权总额累计过200亿；诚实信用、最大程度为投资人实现价值是我们的宗旨</text>
        </view>
      </view>


      <view class='projectsGroup font-size-13' bindtap='goToNearby'>
        <view class='nearbyProjects'>
          <text bindtap='callPhoneNumber' class='margin-left-5'>周围的其它资产</text>
        </view>
        <view class='userLocationGroup'>
          <image class='imageLocation' src='../../images/userLocation.png'></image>
        </view>
      </view>

    </view>
  </scroll-view>
  <view class='buttonsBar'>
    <view class='buttonLeft' bindtap='goToCar'>
      <image class='imageButtonOffers' src='../../images/car.png'></image>
      <text class='font-size-11'>我的报价</text>
    </view>
    <view class='buttonCar' bindtap='sendToShopCar'>
      <text class='font-size-11 '>添加到我的列表中</text>
    </view>
    <view class='buttonRight' bindtap='goToOffer'>
      <text class='font-size-11'>提出建议</text>
    </view>
  </view>
</view>