/* pages/user/user.wxss */

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px #d6dadb solid;
}

.userinfo-avatar {
  width: 230rpx;
  height: 230rpx;
  margin: 7rpx;
  border-radius: 50%;
}

.imageContainer {
  background-color: white;
  width: 242rpx;
  height: 242rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white !important;
}

.info {
  display: flex;
  flex-direction: row;
  background-color: white;
  border-bottom: 1px #d6dadb solid;
}

.infoData {
  display: flex;
  flex-direction: column;
  width: 33.3%;
  align-items: center;
}

.offers {
  padding: 15px;
  margin-bottom: 10px;
}

.pull-right {
  float: right;
}

.imageCar {
  width: 25px;
  height: 25px;
  position: absolute;
  top: 5%;
  right: 15px;
}

.BackgroundProfile {
  background-color: #ff6801;
}

@media (max-width: 480px) {
  .BackgroundProfile {
    height: 280px;
  }

  .info {
    height: 70px;
  }

  .imageIconUserCar {
    width: 40px;
    height: 35px;
    margin-top: 5px;
  }

  .imageIconUserNotification {
    width: 35px;
    height: 35px;
    margin-top: 5px;
  }

  .lineVBar {
    width: 7px !important;
    height: 60px !important;
    margin-top: 5px !important;
  }
}

