<!--pages/user/user.wxml-->
<image wx:if="{{user}}" bindtap='goToUserInformation' src="../../images/config.png" class='home'></image>
<text wx:if="{{user}}" bindtap='logout' class='logout'>注销</text>
<text wx:if="{{!user}}" bindtap='login' class='logout'>登录</text>
<view>
  <view class="userinfo BackgorundProfile" wx:if="{{!user}}">
    <block>
      <view class='dataUserInfoCover'>
        <view class='imageContainer'>
          <image bindtap="getWechatUserInfo" class="userinfo-avatar" src="../../images/userSelected.png" background-size="cover"></image>
        </view>
        <button plain='true' open-type="getUserInfo"	bindgetuserinfo="getWechatUserInfo" class="buttonGetUserInfo font-size-13">给我们微信用户信息</button>
      </view>
    </block>
  </view>
  <view class="userinfo BackgorundProfile" wx:if="{{user}}">
    <block>
      <view class='dataUserInfoCover'>
        <view class='imageContainer'>
          <image wx:if="{{user.avatarUrl}}" bindtap="goToUserInformation" class="userinfo-avatar" src="{{user.avatarUrl}}" background-size="cover"></image>
          <image wx:if="{{!user.avatarUrl}}" class="userinfo-avatar" src="../../images/userSelected.png" background-size="cover"></image>
        </view>
        <text wx:if="{{user.fullName}}" bindtap="goToUserInformation" class="userinfo-nickname font-size-13">{{user.fullName}}</text>
        <text wx:if="{{!user.fullName}}" bindtap="goToUserInformation" class="userinfo-nickname font-size-13">{{user.nickName}}</text>
        <view class='locationUser'>
          <image wx:if="{{user.city}}" class='imageLocationUser' src='../../images/userLocation.png'></image>
          <text wx:if="{{user.city}}" class="userinfo-nickname font-size-11">{{user.city}}, {{user.province}}</text>
          <button wx:if="{{!user.city}}" plain='true' open-type="getUserInfo"	bindgetuserinfo="getWechatUserInfo" class="buttonGetUserInfo font-size-13">给我们微信用户信息</button>
        </view>
      </view>
    </block>
  </view>
  <view class='info'>
    <view class='infoData' bindtap='goToRecommended'>
      <image class='imageIconUserNotification' src='../../images/recommended.png'></image>
      <text class='font-size-13'>推荐</text>
    </view>
    <image class='lineVBar' src='../../images/lineV.jpg'></image>
    <view class='infoData' bindtap='goToContact'>
      <image class='imageIconUserNotification' src='../../images/notifications.png'></image>
      <text class='font-size-13'>通知</text>
    </view>
    <image class='lineVBar' src='../../images/lineV.jpg'></image>
    <view class='infoData' bindtap='goToCar'>
      <image class='imageIconUserCar' src='../../images/car.png'></image>
      <text class='font-size-13'>我的报价</text>
    </view>
  </view>
  <view class='information'>
    <view class='projectsGroup' wx:for="{{offers}}" wx:for-item="offer" data-id='{{offer.project.objectId}}' bindtap='goToProject'>
      <view class='projectTitleGroup'>
        <image class='imageIconUserNotification' src='../../images/projects.png'></image>
        <text class='font-size-13'>{{offer.project.title}}</text>
      </view>
      <image class='lineV' src='../../images/lineV.jpg'></image>
      <view class='projectTextGroup'>
        <text class='colorTextPrimary'> ¥{{offer.amount}}万</text>
        <text class='font-size-13'>{{offer.description}}</text>
      </view>
    </view>
  </view>
</view>