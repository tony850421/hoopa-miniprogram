<!--index.wxml-->
<view>
  <video class="videoHome" poster='http://lc-qpv1wnqe.cn-n1.lcfile.com/0bac82a3973b34702c9e.jpg' controls='true' src='http://lc-qNFjWh6z.cn-n1.lcfile.com/a83666d30482b79683b4.mp4'></video>
</view>
<view class='HomePage'>
  <view class="section">
    <view class="buttonsGroup">
      <view class='buttonsBox' bindtap='goToNews'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/news.png'></image>
        <text class='font-size-13'>新闻</text>
      </view>
      <view class='buttonsBox' bindtap='goToPartners'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/partners.png'></image>
        <text class='font-size-13'>合作伙伴</text>
      </view>
      <view class='buttonsBox' bindtap='goToTeam'>
        <image mode='widthFix' class='IconsButtons' src='../../images/team.png'></image>
        <text class='font-size-13'>团队</text>
      </view>
    </view>
  </view>
  <view class="section">
    <view class="buttonsGroup">
      <view class='buttonsBox'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/services.png'></image>
        <text class='font-size-13'>服务</text>
      </view>
      <view class='buttonsBox' bindtap='goToAboutUs'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/about.png'></image>
        <text class='font-size-13'>关于我们</text>
      </view>
      <view class='buttonsBox' bindtap='goToBranches'>
        <image mode='widthFix' class='IconsButtons' src='../../images/branch.png'></image>
        <text class='font-size-13'>分支机构</text>
      </view>
    </view>
  </view>
  <view class="section">
    <view class="buttonsGroup">
      <view class='buttonsBox'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/recommended.png'></image>
        <text class='font-size-13'>推荐</text>
      </view>
      <view class='buttonsBox' bindtap='goToFinance'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/statistics.png'></image>
        <text class='font-size-13'>统计</text>
      </view>
      <view class='buttonsBox' bindtap='goToProjects'>
        <image mode='widthFix' class='IconsButtons' src='../../images/projects.png'></image>
        <text class='font-size-13'>项目</text>
      </view>
    </view>
  </view>
  <view class='sectionProjects'>
    <image mode='aspectFill' class='imageProjects' bindtap='goToProjects' src='http://lc-qpv1wnqe.cn-n1.lcfile.com/3a1052d7ac2af3fffff7.jpg'></image>
    <view wx:if="{{products.length > 0}}">
      <scroll-view class='scrollHorizontal' scroll-x bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="red" scroll-top="100">
        <view class='projectList'>
          <view class="project" id="{{product.objectId}}" wx:key="{{product.objectId}}" bindtap='goToProject' wx:for="{{products}}" wx:for-item="product">
            <text class='font-size-13 margin-top-10'>{{product.title}}</text>
            <image class='imageLine' src='../../images/line.jpg'></image>
            <text class='font-size-13 colorTextPrimary'>{{product.debitAmount}}</text>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
</view>