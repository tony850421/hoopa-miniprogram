/**index.wxss**/

.margin-top-10 {
  margin-top: 10px;
}

.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

.videoHome {
  width: 100%;
}

.imageProjects {
  width: 100%;
}

@media (max-width: 480px) {
  .videoHome {
    height: 280px;
  }

  .imageProjects {
    height: 170px;
  }
}

@media (max-width: 414px) {
  .videoHome {
    height: 280px;
  }

  .imageProjects {
    height: 160px;
  }
}

@media (max-width: 375px) {
  .videoHome {
    height: 250px;
  }

  .imageProjects {
    height: 140px;
  }
}

@media (max-width: 360px) {
  .videoHome {
    height: 240px;
  }

  .imageProjects {
    height: 140px;
  }
}

@media (max-width: 320px) {
  .videoHome {
    height: 200px;
  }

  .imageProjects {
    height: 120px;
  }
}

.buttonsMarginTop {
  margin-top: 10px;
  flex-direction: row;
  display: flex;
  align-items: center;
  text-align: center;
}

.buttonsBox {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  width: 33.3%;
  background-color: white;
  margin-left: 8px;
  margin-right: 8px;
  padding-bottom: 12px;
  padding-top: 12px;
  border-radius: 5px;
  border: 1px #d6dadb solid;
}

.buttonsBoxAboutUs {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  width: 33.3%;
  margin-left: 8px;
  margin-right: 8px;
}

.buttonsGroup {
  padding-left: 7px;
  padding-right: 7px;
  display: flex;
  flex-direction: row;
  margin-top: 7px;
  margin-bottom: 7px;
}

.IconsButtons {
  width: 30px;
  height: 30px;
}

.IconsButtonAboutUs {
  width: 81px;
  height: 81px;
}

.project {
  border: 1px #d6dadb solid;
  background-color: white;
  margin-left: 5px;
  padding: 8px;
  width: 120px;
  height: 80px;
  display: flex;
  flex-direction: column;
  border-radius: 5px;
  text-align: center;
}

.projectList {
  display: flex;
  flex-direction: row;
}

.scrollHorizontal {
  width: 100%;
  height: 100px;
}

.tagsList {
  display: flex;
  flex-direction: row;
}

.tag {
  border: 1px blue solid;
  margin-right: 5px;
  border-radius: 25px;
  font-size: 13px;
  padding-left: 4px;
  padding-right: 4px;
}

.sectionProjects {
  padding-bottom: 0px !important;
  padding-top: 5px !important;
}

.weui-search-bar__form, .weui-search-bar__label {
  border-radius: 20px !important;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
}

.HomePage {
  display: flex;
  flex-direction: column;
}

.tags {
  color: #ff6801;
  margin-right: 5px;
  border-radius: 5px;
  padding: 0;
  border: 1px #ff6801 solid;
  font-size: 9px;
}

.text-title{
  text-align:start;
}