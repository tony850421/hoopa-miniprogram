/**index.wxss**/
.section{
  margin-top: 10px;
  background-color: white;
  padding-top: 10px;
  padding-bottom: 10px;
}

.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.videoHome{
  width: 100%;
}

.imageProjects{
  width: 100%;
}

@media(max-width: 480px){
  .videoHome{
    height: 250px;
  }

  .imageProjects{
    height: 170px;
  }
}

@media(max-width: 414px){
  .videoHome{
    height: 220px;
  }

  .imageProjects{
    height: 160px;
  }
}

@media(max-width: 375px){
  .videoHome{
    height: 200px;
  }

  .imageProjects{
    height: 140px;
  }
}

@media(max-width: 360px){
  .videoHome{
    height: 200px;
  }

  .imageProjects{
    height: 140px;
  }
}

@media(max-width: 320px){
  .videoHome{
    height: 160px;
  }

  .imageProjects{
    height: 120px;
  }
}

.buttonsMarginTop{
  margin-top: 10px;
  flex-direction: row;
  display: flex;
  align-items: center;
  text-align: center;
}

.buttonsBox{
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  width: 33.3%;
}

.IconsButtons{
  width: 50px;
  height: 50px;
  border-radius: 50%;  
}

.project{
  border: 1px #C4C4C4 solid;
  width: 130px !important;
  height: 80px !important;
  background-color: white;
  margin-left: 5px;
  display: flex;
  flex-direction: column;
  padding: 5px;
}

.projectList{
  display: flex;
  flex-direction: row;
}

.scrollHorizontal{
  width: 100%;
  height: 100px;
}

.tagsList{
  display: flex;
  flex-direction: row;
}

.tag{
  border: 1px blue solid;
  margin-right: 5px;
  border-radius: 25px;
  font-size: 13px;
  padding-left: 4px;
  padding-right: 4px;
}

.sectionProjects{
  padding-bottom: 0px !important;
}

.weui-search-bar__form,
.weui-search-bar__label{
  border-radius: 20px !important;
}