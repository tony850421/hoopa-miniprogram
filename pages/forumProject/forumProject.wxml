<!--pages/forumProject/forumProject.wxml-->
<view class="contactOrder">
  <view style='height: {{height-45}}px'>
    <scroll-view scroll-y="true" style='height: {{height-45}}px' scroll-into-view="A{{intoView}}" scroll-top="100">
      <view wx:for="{{messages}}" wx:for-item="message" wx:key="{{message.objectId}}" id="A{{message.objectId}}">
        <text class='dateTextRight'>{{message.createdAt}}</text>        
        <view class='comments'>
          <view style='width: {{width-110}}px' class='commentStyleRight'>
            <view class='contentComment'>
              <text class='font-size-13'>{{message.content}}</text>
            </view>
          </view>
          <view class='imageAvatar'>
            <image wx:if="{{message.avatarUrl}}" src='{{message.avatarUrl}}' class='imageAvatar'></image>
            <image wx:if="{{!message.avatarUrl}}" src='../../images/userSelected.png' class='imageAvatar'></image>
          </view>
        </view>
        <view wx:if="{{index == messages.length -1 }}" class='bottom'></view>
      </view>
    </scroll-view>
  </view>
  <view class='textBar'>
    <view class='inputGroup'>
      <input bindinput='bindKeyInput' bindconfirm='confirmText' value='{{inputText}}' class='inputSend' type='text'></input>
    </view>
    <view class='buttonSendGroup'>
      <image bindtap='sendText' class='send' src='../../images/send.png'></image>
    </view>
  </view>
</view>