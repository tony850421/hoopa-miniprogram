/* pages/shop-cart/shop-cart.wxss */
.product{
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px #D6DADB solid;
  background-color: white;
  border-radius: 5px;
  margin-bottom: 5px;
}

.productInformation{
  display: flex;
  flex-direction: column;
  padding-left: 10px;
}

.imageProductCar{
  width: 100px;
  height: 80px;
  padding-left: 6px;
  padding-top:6px;
  border-radius: 5px;
}

.textShop{
  width: 70%;
  padding: 0;
  height: 45px;
}

.shop{
  width: 30%;
  background-color: red;
  padding: 0;
  height: 45px;
}

.barShop{
  width: 100%;
  height: 45px;
  display: flex;
  flex-direction: row;
  border-top: 1px #EFEFF4 solid;
}

.topNavBarShopCar{
  display: flex;
  flex-direction: row;
  background-color: white;
  align-items: center;
  border-bottom: 1px #d6dadb solid;
}

.lineV {
  width: 12px;
  height: 60px;
}

.infoData {
  display: flex;
  flex-direction: column;
  width: 33.3%;
  align-items: center;
  height: 80px;
  margin-left:5%;
}

.imageIconUserCar {
  width: 40px;
  height: 35px;
  margin-top: 10px;
}

.font-size-13 {
  font-size: 13px;
}

.textBar{
  width: 50%;
  text-align: center;
}

.shopCarBody{
  padding: 10px;
}

.widthText{
  width: 53%;
}