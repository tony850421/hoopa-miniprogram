<!--pages/home/home.wxml-->
<view>
  <swiper indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{slides}}" wx:for-item="image">
      <swiper-item bindtap="goToFilterProject" data-type="{{image.type}}">
        <image mode='aspectFill' src="{{image.imageUrl}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
</view>

<view class='HomePage'>
  <view class='section margin-top-20'>
    <view class="buttonsGroup">
      <view class='buttonsBox' bindtap='goToAboutUs'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/about.png'></image>
        <text class='font-size-13'>关于胡巴</text>
      </view>
      <view class='buttonsBox' bindtap='goToBranches'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/branch.png'></image>
        <text class='font-size-13'>分支机构</text>
      </view>
      <view class='buttonsBox' bindtap='goToTeam'>
        <image mode='widthFix' class='IconsButtons' src='../../images/partners.png'></image>
        <text class='font-size-13'>合作伙伴</text>
      </view>
    </view>

    <view class='newsBoxBackground'>
      <image mode='aspectFill' class='newsImageOne' src='http://lc-qpv1wnqe.cn-n1.lcfile.com/0edf0cca8c7c3a6a2403.jpg'></image>
      <image mode='aspectFill' class='newsImageTwo' src='http://lc-qpv1wnqe.cn-n1.lcfile.com/7e7a65c8d888b66379f1.jpg'></image>
    </view>

    <view class='padding-10 margin-top-20 newsBox'>
      <swiper id="swiperNews" indicator-dots="true" interval="{{interval}}" duration="{{duration}}">
         <block wx:for="{{news}}" wx:for-item="image"> 
          <swiper-item class="text-center" id="{{image.id}}" bindtap='goToNews'>
             <image mode='aspectFill' src="{{image.imageUrl}}" class="slide-image" />
             <text class='textSwiperItem text-center font-size-13'>{{image.title}}</text> 
          </swiper-item>
        </block>
      </swiper>
    </view>

