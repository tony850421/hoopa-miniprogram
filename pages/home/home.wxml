<!--pages/home/home.wxml-->
<view class='swiperBox'>
  <swiper id='swiperTop' indicator-dots="true" indicator-color='rgba(255,255,255,0.5)' indicator-active-color='#FFFFFF' circular='true' autoplay='true' interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{slides}}" wx:for-item="image">
      <swiper-item bindtap="goToFilterProject" data-type="{{image.type}}">
        <image mode='aspectFill' src="{{image.imageUrl}}" class="slide-imageTop" />
      </swiper-item>
    </block>
  </swiper>
</view>

<view class='HomePage'>
  <view class='section'>
    <view class="buttonsGroup">
      <view class='buttonsBox margin-left-0' bindtap='goToAboutUs'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/about.png'></image>
        <text class='font-size-13'>关于胡巴</text>
      </view>
      <view class='buttonsBox' bindtap='goToBranches'>
        <image mode='aspectFit' class='IconsButtons' src='../../images/branch.png'></image>
        <text class='font-size-13'>分支机构</text>
      </view>
      <view class='buttonsBox' bindtap='goToPartners'>
        <image mode='widthFix' class='IconsButtons' src='../../images/partners.png'></image>
        <text class='font-size-13'>合作伙伴</text>
      </view>
    </view>
    <view class='padding-5 margin-top-5 newsBox'>
      <swiper id="swiperNews" circular='true' interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{news}}" wx:for-item="image">
          <swiper-item class="text-center" id="{{image.id}}" bindtap='goToNews'>
            <image mode='aspectFill' src="{{image.imageUrl}}" class="slide-image" />
            <image wx:if="{{index == 0}}" class='pictureNewsOne' mode='aspectFill' src='{{news[news.length-1].imageUrl}}'></image>
            <image wx:if="{{index != 0}}" class='pictureNewsOne' mode='aspectFill' src='{{news[index-1].imageUrl}}'></image>
            <image wx:if="{{index != news.length-1}}" class='pictureNewsTwo' mode='aspectFill' src='{{news[index+1].imageUrl}}'></image>
            <image wx:if="{{index == news.length-1}}" class='pictureNewsTwo' mode='aspectFill' src='{{news[0].imageUrl}}'></image>
            <!-- <text class='textContentSwiperItem marginLeft8P'>{{image.contentHome}}</text> -->
            <!-- <text class='textTypeSwiperItem marginLeft8P'>{{image.typeHome}}</text> -->
            <view class='backgroundBlackNewsHome'>
              <text class='textTitleSwiperItem'>{{image.titleHome}}</text>
              <text class='textCountSwiperItem'>{{index+1}}</text>
              <text class='textCountSeparatorSwiperItem'>  / </text>
              <text class='textCountTwoSwiperItem'>{{news.length}}</text>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class='backgroundModalHome' style='width: {{width}}px; height: {{height+100}}px' wx:if='{{showModal}}'>
      <image mode='widthFix' style='width: {{width-80}}px' class='imageModalHome' src='http://lc-qpv1wnqe.cn-n1.lcfile.com/1104075df75b82a26c68.jpg'></image>
      <image bindtap='quitModal' style='margin-left: {{(width-30)/2}}px' class='buttonClose' src='../../images/close.png'></image>
    </view>
  </view>
</view>