<!-- pages/contact/contact.wxml -->
<view class="contactOrder">  
  <view style='height: {{height-45}}px'>
  <view class='textN' wx:if="{{messages.length == 0}}">
    <view class='textNotifications' style='height: {{height-45}}px'>
      <text>您目前没有信息</text>
    </view>
  </view>
    <scroll-view scroll-y="true" style='height: {{height-45}}px' scroll-into-view="A{{intoView}}" scroll-top="100" wx:if="{{messages.length > 0}}">
      <view wx:for="{{messages}}" wx:for-item="message" wx:key="{{message.objectId}}" id="A{{message.objectId}}">
        <text wx:if="{{message.sender.objectId != user.objectId}}" class='dateText'>{{message.createdAt}}</text>
        <text wx:if="{{message.sender.objectId == user.objectId}}" class='dateTextRight'>{{message.createdAt}}</text>
        <view wx:if="{{message.sender.objectId != user.objectId}}" class='comments'>
          <view class='imageAvatar'>
            <image src='../../images/icono-02.png' class='imageAvatar'></image>
          </view>
          <view style='width: {{width-110}}px' class='commentStyle'>
            <view>
              <text class='font-size-13'>{{message.content}}</text>
            </view>
          </view>
        </view>
        <view wx:if="{{message.sender.objectId == user.objectId}}" class='comments'>
          <view style='width: {{width-110}}px' class='commentStyleRight'>
            <view class='contentComment'>
              <text class='font-size-13'>{{message.content}}</text>
            </view>
          </view>
          <view class='imageAvatar'>
            <image wx:if="{{user.avatarUrl}}" src='{{user.avatarUrl}}' class='imageAvatar'></image>
            <image wx:if="{{!user.avatarUrl}}" src='../../images/userSelected.png' class='imageAvatar'></image>
          </view>
        </view>
        <view wx:if="{{index == messages.length -1 }}" class='bottom'></view>
      </view>
    </scroll-view>
  </view>
  <view class='textBar'>
    <view class='inputGroup'>
      <input bindinput='bindKeyInput' bindconfirm='confirmText' value='{{inputText}}' class='inputSend' type='text'></input>
    </view>
    <view class='buttonSendGroup'>
      <image bindtap='sendText' class='send' src='../../images/send.png'></image>
    </view>
  </view>
</view>