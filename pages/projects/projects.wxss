.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.topBarSearch {
  display: flex;
  flex-direction: row;
  margin-top: 5px;
}

.projectSearch {
  margin-top: 5px;
}

.itemBarSeatch {
  width: 25%;
}

.kind-list__item-hd {
  padding: 5px !important;
}

.kind-list__img {
  width: 15px !important;
  height: 15px !important;
}

.kind-list__item {
  margin: 0px !important;
}

.weui-cell__bd {
  padding: 5px;
}

.iconsFilters {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}

.listIconFilter {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.iconFilter {
  width: 20%;
  height: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px #d6dadb solid; 
}

.kind-list__item-bd_show {
  position: absolute;
  z-index: 10 !important;
}

.imageIconFilter {
  width: 40px;
  height: 40px;
  margin-top: 20px;
  margin-left: 15%;
}

.weui-search-bar__cancel-btn{
  color: white !important;
}

.weui-search-bar{
  background-color: #ff6801;
}