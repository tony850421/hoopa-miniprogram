/* pages/newsDetail/newsDetail.wxss */
.news{
  padding: 5px;
  background-color: white;
  border: 1px #d6dadb solid;
  display: flex;
  flex-direction: column;
  border-radius: 5px;
}

.newsContent{
  display: flex;
  flex-direction: column;
}

.lineHeightNews{
  line-height: 1.7;
}

.imageNewsView{
  width: 100%;  
  border-radius: 5px;
}

.newsTitle{
  background-color: #757576;
  border-radius: 5px;
  margin-bottom: 10px;
  padding: 10px;
  color: white;
}

.text-align-center{
  text-align: center;
}

.square{
  border: 2px #ff6801 solid;
  padding: 10px;
  border-radius: 5px;
}