<!--pages/partners/partners.wxml-->
<map id="map" longitude="{{longitudeSelected}}" latitude="{{latitudeSelected}}" scale="16" markers='{{partners}}' show-location='true' controls='true'></map>
<view class='dateBox'>
  <view class='displayFlexRow'>
    <view class='displayFlexColumn'>
      <text class='namePartner'>{{nameSelected}}</text>
      <text>{{directionSelected}}</text>
    </view>
    <view class='boxIconCall'>
      <image bindtap='callPhoneNumber' data-phone="{{phoneSelected}}" class='iconCall' src='../../images/call.png'></image>
    </view>
  </view>
</view>
<scroll-view scroll-y="true" style="height: {{height-320}}px" scroll-into-view="red" scroll-top="100">
  <view class='padding-10'>
    <view wx:for="{{partners}}" wx:for-item="partner" wx:key="{{partner.id}}" id="{{partner.id}}" bindtap='tapPartner'>
      <view class='product'>
        <view class='flex-item'>
          <image wx:if='{{partner.selected}}' class='imageProductCar' src='../../images/branches_selected.png'></image>
          <image wx:if='{{!partner.selected}}' class='imageProductCar' src='../../images/branches.png'></image>
        </view>
        <view class='flex-item widthText'>
          <view class='branchesTextBox'>
            <text class='font-size-13'>{{partner.name}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>